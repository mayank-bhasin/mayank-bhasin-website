---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Clarity AI — AI Strategy for Product Leaders',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Work With Me',
        href: '#services',
        icon: 'tabler:rocket',
      },
      { text: 'Learn More', href: '#about' },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1677442136019-21780ecad995?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'AI Technology'
    }}
  >
    <Fragment slot="title">
      <span class="text-accent dark:text-white">AI Strategy</span> for Product Leaders
      <span class="hidden xl:inline"> Who Build with Clarity</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">Founded by Mayank Bhasin</span>, Principal PM at Microsoft Windows Engineering with 21+ years building foundational AI capabilities for businesses and product teams.</span
      >
      <span class="block mb-1 sm:hidden font-bold text-blue-600">Clarity AI by Mayank Bhasin</span>
      No jargon. No hype. Just proven, practical AI strategies that align with your product vision and deliver measurable impact.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      { title: 'Years of Experience', amount: '21+' },
      { title: 'Focus', amount: 'AI-First' },
      { title: 'Enterprise Scale', amount: 'Global' },
      { title: 'Mentorship', amount: 'Active' },
    ]}
  />

  <!-- Features Widget *************** -->

  <Features
    id="services"
    tagline="Services"
    title="How I Can Help You"
    subtitle="Bringing enterprise-grade AI and automation expertise to businesses, individuals, and educational institutions across the UK."
    items={[
      {
        title: 'For Small Businesses',
        description:
          'AI copilot implementation, workflow automation with Zapier/Make/n8n, custom GPT development, and AI strategy consulting to boost productivity and reduce costs.',
        icon: 'tabler:building-store',
      },
      {
        title: 'For Individuals',
        description:
          'Online courses, 1-on-1 coaching, bootcamps, and certification programs to help you master AI tools and advance your career in the AI-first world.',
        icon: 'tabler:user',
      },
      {
        title: 'For Universities',
        description:
          'Curriculum development partnerships, guest lectures, workshops, and student training programs in AI, product management, and digital transformation.',
        icon: 'tabler:school',
      },
      {
        title: 'AI Strategy & Implementation',
        description:
          'From AI readiness assessments to full implementation, I help you navigate the AI landscape and deploy solutions that deliver measurable ROI.',
        icon: 'tabler:brain',
      },
      {
        title: 'Workflow Automation',
        description:
          'Eliminate repetitive tasks and streamline operations with intelligent automation using industry-leading tools and best practices.',
        icon: 'tabler:automation',
      },
      {
        title: 'Mentorship & Training',
        description:
          'Passionate about developing the next generation of AI practitioners and product leaders through hands-on mentorship and practical training.',
        icon: 'tabler:certificate',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    id="about"
    isReversed
    tagline="About Me"
    title="Enterprise Experience Meets Practical Implementation"
    items={[
      {
        title: 'AI-First Leadership',
        description:
          'Leading AI-first programs at Windows Engineering, building intelligent agents that ship value to enterprise customers globally.',
      },
      {
        title: 'Proven Track Record',
        description:
          '21+ years across AI, Cloud, and digital transformation with deep expertise in product leadership and customer success.',
      },
      {
        title: 'Practical Approach',
        description:
          'I focus on solutions that work in the real world, not just in theory. Every strategy is backed by hands-on implementation experience.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1522071820081-009f0129c71c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Team collaboration',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Bringing Enterprise AI Expertise to Your Business
      </h3>
      As a Principal PM at Windows Engineering, I work at the cutting edge of AI and automation. Now, I'm making that enterprise-grade expertise accessible to UK businesses, individuals, and universities.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    title="My Approach to AI Implementation"
    items={[
      {
        title: 'Step 1: <span class="font-medium">Discovery & Assessment</span>',
        description:
          "We start by understanding your current state, identifying opportunities, and assessing AI readiness. No cookie-cutter solutions.",
        icon: 'tabler:search',
      },
      {
        title: 'Step 2: <span class="font-medium">Strategy & Planning</span>',
        description:
          "Develop a clear, actionable roadmap with prioritized use cases, ROI projections, and realistic timelines. You'll know exactly what to expect.",
        icon: 'tabler:chart-dots',
      },
      {
        title: 'Step 3: <span class="font-medium">Implementation</span>',
        description:
          "Hands-on implementation of AI copilots, workflow automations, and intelligent agents. I don't just advise—I build with you.",
        icon: 'tabler:tools',
      },
      {
        title: 'Step 4: <span class="font-medium">Training & Enablement</span>',
        description:
          'Your team learns to use and maintain the solutions. Knowledge transfer is built into every engagement.',
        icon: 'tabler:school',
      },
      {
        title: 'Ready to Transform!',
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1616198814651-e71f960c3180?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Steps image',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Core Expertise"
    subtitle="Deep technical knowledge combined with strategic thinking"
    tagline="What I Bring"
    items={[
      {
        title: 'AI Strategy',
        description: 'Developing AI-first strategies aligned with business objectives',
        icon: 'tabler:brain',
      },
      {
        title: 'Product Leadership',
        description: 'Leading products from conception to delivery with customer focus',
        icon: 'tabler:rocket',
      },
      {
        title: 'Windows Engineering',
        description: 'Expert in Windows quality, telemetry, and enterprise deployment',
        icon: 'tabler:brand-windows',
      },
      {
        title: 'Customer Programs',
        description: 'Building programs that drive adoption and satisfaction',
        icon: 'tabler:users',
      },
      {
        title: 'Digital Transformation',
        description: 'Guiding organizations through cloud and AI transformation',
        icon: 'tabler:transform',
      },
      {
        title: 'Mentorship',
        description: 'Developing next-generation product managers and technical leaders',
        icon: 'tabler:certificate',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-slate-800"></div>
    </Fragment>
  </Features2>

  <!-- Content Widget **************** -->

  <Content
    id="projects"
    tagline="Projects & Portfolio"
    title="Real-World AI Implementations"
    items={[
      {
        title: 'Enterprise AI Copilots',
        description:
          'Intelligent agents deployed at scale for Windows customers, improving productivity and user experience.',
      },
      {
        title: 'Automation Frameworks',
        description:
          'Custom workflow automation solutions that save thousands of hours and reduce operational costs.',
      },
      {
        title: 'AI Training Programs',
        description:
          'Comprehensive training programs that upskill teams and drive AI adoption across organizations.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1581091226825-a6a2a5aee158?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Tech projects',
    }}
    isReversed
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Building Solutions That Scale
      </h3>
      From enterprise deployments to small business implementations, I focus on solutions that deliver measurable value and stand the test of time.
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    id="mentorship"
    isAfterContent
    tagline="Mentorship & Impact"
    title="Developing the Next Generation"
    items={[
      {
        title: 'Career Guidance',
        description:
          'One-on-one mentorship for aspiring product managers and technical leaders navigating their career journey.',
      },
      {
        title: 'Skill Development',
        description:
          'Practical training in AI tools, product management frameworks, and strategic thinking.',
      },
      {
        title: 'Community Building',
        description:
          'Creating spaces where learners can connect, share experiences, and grow together.',
      },
    ]}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Passionate About Teaching & Mentorship
      </h3>
      Beyond consulting, I'm committed to developing the next generation of AI practitioners and product leaders through active mentorship and practical training programs.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- BlogLatestPosts Widget **************** -->

  <BlogLatestPosts
    title="Latest Insights"
    information="Explore my latest articles on AI, automation, product management, and digital transformation."
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Get Started',
        href: '/contact',
        icon: 'tabler:message-circle',
      },
    ]}
  >
    <Fragment slot="title">
      Ready to Transform Your Business with AI?
    </Fragment>

    <Fragment slot="subtitle">
      Whether you're a small business looking to automate, an individual wanting to upskill, or a university seeking AI curriculum—let's talk.
    </Fragment>
  </CallToAction>
</Layout>
