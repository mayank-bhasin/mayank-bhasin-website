---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import Stats from '~/components/widgets/Stats.astro';
import Features3 from '~/components/widgets/Features3.astro';

const metadata = {
  title: 'About â€” Mayank Bhasin',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About Me"
  >
    <Fragment slot="title">
      Mayank Bhasin
    </Fragment>

    <Fragment slot="subtitle">
      <span class="text-lg">
        Principal PM at Windows Engineering with 21+ years of experience across AI, Cloud, and digital transformation.
      </span>
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Experience & Impact"
    stats={[
      { title: 'Years of Experience', amount: '21+' },
      { title: 'Enterprise Programs', amount: 'AI-First' },
      { title: 'Focus Areas', amount: '5+' },
      { title: 'Customer Impact', amount: 'Enterprise' },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    items={[
      {
        title: 'AI Strategy & Product Leadership',
        description:
          'Leading AI-first programs and building intelligent agents that deliver measurable value to enterprise customers.',
      },
      {
        title: 'Digital Transformation',
        description:
          'Driving cloud and AI adoption across large-scale enterprise environments with focus on Windows quality and telemetry.',
      },
      {
        title: 'Customer Programs',
        description:
          'Designing and executing customer success programs that bridge technology and business outcomes.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1522071820081-009f0129c71c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Team collaboration',
    }}
  >
    <Fragment slot="content">
      <h2 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        What I Do
      </h2>
      <p class="text-muted mb-4">
        I lead AI-first programs and build intelligent agents that ship value to enterprise customers.
        My work spans AI strategy, product leadership, and customer programs.
      </p>
    </Fragment>
  </Content>

  <!-- Features3 Widget ************** -->

  <Features3
    title="Core Expertise"
    subtitle="Areas where I can help you succeed"
    columns={3}
    items={[
      {
        title: 'AI Strategy',
        description:
          'Developing and executing AI-first strategies that align with business objectives and deliver measurable outcomes.',
        icon: 'tabler:brain',
      },
      {
        title: 'Product Leadership',
        description:
          'Leading product initiatives from conception to delivery, with focus on customer value and business impact.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Windows Quality & Telemetry',
        description:
          'Expert in Windows engineering, quality assurance, and data-driven decision making through telemetry.',
        icon: 'tabler:brand-windows',
      },
      {
        title: 'Customer Programs',
        description:
          'Building and scaling customer success programs that drive adoption and satisfaction.',
        icon: 'tabler:users',
      },
      {
        title: 'Mentorship',
        description:
          'Passionate about developing the next generation of product managers and technical leaders.',
        icon: 'tabler:school',
      },
      {
        title: 'Digital Transformation',
        description:
          'Guiding organizations through cloud and AI transformation with practical, actionable strategies.',
        icon: 'tabler:transform',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Enterprise Scale',
        description:
          '21+ years of experience working with enterprise customers and complex technical environments.',
      },
      {
        title: 'AI-First Approach',
        description:
          'Building intelligent agents and automation solutions that solve real business problems.',
      },
      {
        title: 'Proven Track Record',
        description:
          'Consistently delivering value through strategic thinking, technical expertise, and customer focus.',
      },
    ]}
  >
    <Fragment slot="content">
      <h2 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Why Work With Me
      </h2>
      <p class="text-muted">
        I bring deep enterprise experience, technical expertise, and a proven track record of delivering
        AI-first solutions that create real business value.
      </p>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>
</Layout>
