---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Content from '~/components/widgets/Content.astro';

const metadata = {
  title: 'Contact â€” Mayank Bhasin',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Get in Touch"
    title="Let's Connect"
    subtitle="I'm always interested in connecting with people exploring AI transformation, innovative product strategies, or passionate about mentorship and growth."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Contact Information"
    subtitle="Reach out through any of these channels"
    columns={2}
    items={[
      {
        title: 'LinkedIn',
        description: 'Connect with me on LinkedIn for professional networking and collaboration opportunities.',
        icon: 'tabler:brand-linkedin',
      },
      {
        title: 'Email',
        description: 'Send me an email for consulting inquiries, speaking engagements, or mentorship requests.',
        icon: 'tabler:mail',
      },
      {
        title: 'GitHub',
        description: 'Check out my projects and code repositories.',
        icon: 'tabler:brand-github',
      },
      {
        title: 'Articles & Insights',
        description: 'Read my latest thoughts on AI, automation, and product management.',
        icon: 'tabler:article',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    title="Quick Links"
    items={[
      {
        title: 'LinkedIn Profile',
        description: 'https://www.linkedin.com/in/mayank-bhasin-00a46b51/',
      },
      {
        title: 'GitHub',
        description: 'https://github.com/mayank-bhasin',
      },
      {
        title: 'Email',
        description: 'Available on request via LinkedIn',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1596526131083-e8c633c948d2?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2074&q=80',
      alt: 'Contact',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Ways to Connect
      </h3>
      <p class="text-muted mb-4">
        I'm based in the UK and work with clients across UK, EMEA, and the US. I'm open to:
      </p>
      <ul class="text-muted list-disc list-inside space-y-2">
        <li>AI transformation consulting for businesses</li>
        <li>Speaking engagements and workshops</li>
        <li>University partnerships and guest lectures</li>
        <li>Mentorship opportunities</li>
        <li>Product strategy collaboration</li>
      </ul>
    </Fragment>
  </Content>

  <!-- Social Links Section -->

  <section class="bg-blue-50 dark:bg-slate-800 py-16">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold mb-8">Connect on Social Media</h2>
      <div class="flex justify-center gap-8 flex-wrap">
        <a
          href="https://www.linkedin.com/in/mayank-bhasin-00a46b51/"
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-2 px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>
          LinkedIn
        </a>

        <a
          href="https://github.com/mayank-bhasin"
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-2 px-6 py-3 bg-gray-800 text-white rounded-lg hover:bg-gray-900 transition-colors"
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
          GitHub
        </a>
      </div>
    </div>
  </section>
</Layout>
